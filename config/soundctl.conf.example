# Sound Control Configuration

# Paths
BASE_DIR="/home/onur/soundctl"
SOUNDS_DIR="${BASE_DIR}/sounds"
LOG_DIR="${BASE_DIR}/logs"
ROUTINE_SCHEDULE="${BASE_DIR}/config/schedule.txt"

# Player (mpg123)
PLAYER="/usr/bin/mpg123"
PLAYER_ARGS="-q"

# ALSA Control
AMIXER="/usr/bin/amixer"
ALSA_CONTROL="AirPlayMaster"

# Defaults
DUCK_VOL=30

# Home Assistant
HA_URL="http://homeassistant.local:8123"
HA_TOKEN_FILE="${BASE_DIR}/config/ha.token"

# Entities
ENTITY_ENABLED="input_boolean.bells_enabled"
ENTITY_VOL="input_number.airplay_bell_volume"
